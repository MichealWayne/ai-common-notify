  },
  "homepage": "https://github.com/MichealWayne/ai-common-notify#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^24.2.1",
    "@types/node-notifier": "^8.0.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "pkg": "^5.8.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
