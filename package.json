{
  "name": "ai-common-notify",
  "version": "1.0.0",
  "description": "A unified notification service for AI coding tools",
  "main": "dist/index.js",
  "bin": {
    "ai-common-notify": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "QUICK_INIT.md",
    "SCRIPT_CALLBACKS.md",
    "docs/"
  ],
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/assets && cp -r src/assets/* dist/assets/",
    "dev": "ts-node src/index.ts",
    "test": "npm run build && jest test/unit",
    "test:watch": "jest --watch test/unit",
    "test:coverage": "jest --coverage test/unit",
    "package": "npm run build && pkg . --output ai-notify",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "notification",
    "claude",
    "cursor",
    "mcp"
  ],
  "author": "MichealWayne",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MichealWayne/ai-common-notify.git"
  },
  "bugs": {
    "url": "https://github.com/MichealWayne/ai-common-notify/issues"
  },
  "homepage": "https://github.com/MichealWayne/ai-common-notify#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^24.2.1",
    "@types/node-notifier": "^8.0.5",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "pkg": "^5.8.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "axios": "^1.11.0",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "node-notifier": "^10.0.1",
    "zod": "^3.22.4"
  },
  "pkg": {
    "assets": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "targets": [
      "node16-linux-x64",
      "node16-macos-x64",
      "node16-win-x64"
    ]
  }
}
